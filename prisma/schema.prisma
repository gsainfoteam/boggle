generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uuid      String   @id @db.Uuid
  createdAt DateTime @default(now())

  FcmToken FcmToken[]
  Logs     Logs[]
}

model Service {
  id          Int      @id @default(autoincrement())
  name        String
  privateKey  String
  projectName String
  email       String
  createdAt   DateTime @default(now())

  FcmToken FcmToken[]
  Logs     Logs[]
}

model FcmToken {
  FcmTokenId String
  createdAt  DateTime @default(now())

  userUuid  String  @db.Uuid
  User      User    @relation(fields: [userUuid], references: [uuid])
  serviceId Int
  Service   Service @relation(fields: [serviceId], references: [id])

  @@id([FcmTokenId, userUuid, serviceId])
}

model Logs {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())

  userUuid  String  @db.Uuid
  User      User    @relation(fields: [userUuid], references: [uuid])
  serviceId Int
  Service   Service @relation(fields: [serviceId], references: [id])
}
